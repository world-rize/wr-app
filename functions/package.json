  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/app": "^0.6.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "firebase-firestorm": "^2.0.5",
    "firebase-functions": "^3.3.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "firebase-functions-test": "^0.1.6",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.2",
    "typescript": "^3.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": ["ts", "js"],
    "testMatch": [
      "**/test/**/*.ts"
