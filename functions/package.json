{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "switch": "n 10.20.1",
    "dev": "npm run switch && npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run switch && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest -i --detectOpenHandles",
    "docs": "typedoc --out ../docs/typedoc src",
    "migrate": "MIGRATE=true ts-node src/migrate.ts"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/app": "^0.6.2",
    "class-validator": "^0.12.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.10.0",
    "firebase-firestorm": "^2.0.5",
    "firebase-functions": "^3.3.0",
    "jest-diff": "^26.2.0",
    "nqdm": "^2.0.2",
    "object-mapper": "^6.2.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.10.2",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.4",
    "@types/uuid": "^8.0.1",
    "firebase-functions-test": "^0.2.1",
    "jest": "26.1.0",
    "ts-jest": "26.1.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/test/**/*.ts"
    ]
  },
  "private": true
}
